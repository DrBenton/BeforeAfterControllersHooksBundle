<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--<parameters>-->
    <!--</parameters>-->

    <services>
        <service id="before_after_controllers_hooks.controller.listener"
                class="Rougemine\Bundle\BeforeAfterControllersHooksBundle\EventListener\ControllerListener">
            <argument type="service" id="annotation_reader" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="before_after_controllers_hooks.response.listener"
                class="Rougemine\Bundle\BeforeAfterControllersHooksBundle\EventListener\ResponseListener">
            <argument type="service" id="annotation_reader" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
